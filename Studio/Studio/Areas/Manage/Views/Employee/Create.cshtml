@model CreateEmployeeVM

<div class="card-body">
    <h4 class="card-title">Create</h4>

    <form class="forms-sample" method="post" enctype="multipart/form-data">
        <div class="form-group">
            <label asp-for="Name"></label>
            <input asp-for="Name" class="form-control" placeholder="Name">
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Surname"></label>
            <input asp-for="Surname" class="form-control" placeholder="Surname">
            <span asp-validation-for="Surname" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="TwitterLink">Twitter Link</label>
            <input asp-for="TwitterLink" class="form-control" placeholder="Twitter Link">
            <span asp-validation-for="TwitterLink" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="FacebookLink"> Facebook Link</label>
            <input asp-for="FacebookLink" class="form-control" placeholder="Facebook Link">
            <span asp-validation-for="FacebookLink" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="LinkedinLink">Linkedin Link</label>
            <input asp-for="LinkedinLink" class="form-control" placeholder="Linkedin Link">
            <span asp-validation-for="LinkedinLink" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="PositionId">Position</label>
            <select asp-for="PositionId" class="form-control" asp-items="new SelectList(Model.Positions, nameof(Position.Id), nameof(Position.Name))">
                <option selected diasbled>Choose position</option>
            </select>
            <span asp-validation-for="PositionId" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Photo">Choose image</label>
            <input asp-for="Photo" class="form-control" >
            <span asp-validation-for="Photo" class="text-danger"></span>
        </div>

        <button type="submit" class="btn btn-primary me-2">Submit</button>
        <a class="btn btn-light" asp-action="index">Cancel</a>
    </form>
</div>
